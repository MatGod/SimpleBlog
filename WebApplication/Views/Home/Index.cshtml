@using DataLayer.Enums
@model List<PresentationLayer.Models.DirectoryViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <h2>
                        <a asp-action="Index" asp-controller="Page"
                           asp-route-pageId="@item.Directory.Id"
                           asp-route-pageType="@PageEnums.PageType.Directory">
                            @item.Directory.Title
                        </a>
                        <a asp-action="PageEditor"
                           asp-controller="Page"
                           asp-route-pageId="@item.Directory.Id"
                           asp-route-pageType="@PageEnums.PageType.Directory">
                            <img class="icon" src="Resourses/Icons/EditIcon.png" alt="(Edit)" height="24px"/>
                        </a>
                    </h2>
                    <ul>
                        @if (item.Materials != null)
                        {
                            foreach (var subItem in item.Materials)
                            {
                                <li>
                                    <a asp-action="Index" asp-controller="Page" asp-route-pageId="@subItem.Material.Id" asp-route-pageType="@PageEnums.PageType.Material">@subItem.Material.Title</a>
                                    <a asp-action="PageEditor" asp-controller="Page" asp-route-pageId="@subItem.Material.Id" asp-route-pageType="@PageEnums.PageType.Material" asp-route-directoryId="@item.Directory.Id">-edit</a>
                                </li>
                            }
                            <li>
                                <a asp-action="PageEditor" asp-controller="Page" asp-route-pageId="0" asp-route-directoryid="@item.Directory.Id" asp-route-pageType="@PageEnums.PageType.Material">-create Material</a>
                            </li>
                        }
                    </ul>
                </li>
            }
            <li>
                <a asp-action="PageEditor" asp-controller="Page" asp-route-pageId="0" asp-route-pageType="@PageEnums.PageType.Directory">-create Directory</a>
            </li>
        </ul>
    </div>
</div>
